# Domain Configuration
DOMAIN=your-domain.com

# SSL/TLS Configuration
# Set to true if you want to use SSL (recommended for production)
USE_SSL=true

# Email for Let's Encrypt certificates
LETSENCRYPT_EMAIL=your-email@example.com

# Application Environment
NODE_ENV=production

# Database Configuration (if you plan to add database support later)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=elo_leaderboard
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# API Configuration
API_URL=https://your-domain.com/api

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here

# 42 OAuth Configuration
INTRA_CLIENT_ID=your_42_client_id
INTRA_CLIENT_SECRET=your_42_client_secret
INTRA_REDIRECT_URI=https://your-domain.com/api/auth/callback
# For local development:
# INTRA_REDIRECT_URI=http://localhost:8081/api/auth/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here